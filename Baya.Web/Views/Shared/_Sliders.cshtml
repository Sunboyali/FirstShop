                            {
                                <div class="swiper-slide">
                                    <a href="@slidertwo.Link" title="@slidertwo.TitleImage"><img alt="@slidertwo.AltImage" src="~/site/img/sliders/sidebar-slider/sidebar-upload/@slidertwo.ImageName" /></a>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="swiper-slide">
                                <a href="#"><img src="~/site/img/sliders/sidebar-slider/default/1.jpg" /></a>
                            </div>
                            <div class="swiper-slide">
                                <a href="#"><img src="~/site/img/sliders/sidebar-slider/default/2.jpg" /></a>

                            </div>                           

                        }



                    </div>
                    <!-- Add Pagination -->
                    <div class="swiper-pagination"></div>
                    <!-- Add Arrows -->
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            }
            else
            {
                var sidetwo = Model.BannerImageModel.Single(b => b.Name == "SideBannerTwo");
                <div class="baner-main-slide">
                    <a href="@sidetwo.Link"><img alt="@sidetwo.AltImage" title="@sidetwo.TitleImage" width="847" height="424" src="~/site/img/banner/side-banner/@sidetwo.ImageName" /></a>

